<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VCL | VideoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script>
      const ROOM_ID = "<%= roomId %>";
      const PORT = "<%= port %>";

      let USERNAME = sessionStorage.getItem('zoom-USERNAME');
      if(!USERNAME){
        USERNAME = prompt('What is your name?') || 'Guest';
        sessionStorage.setItem('zoom-USERNAME', USERNAME)
      }
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="script.js" defer></script>

  </head>
  <body>

    <div class="modal" id="modal">
      <button id="copyInviteBtn">Copy invite</button>
      <button id="sendMailBtn">Send Mail</button>
    </div>

    <div class="header">
      <div class="logo">
        <h3>Video Chat</h2>
      </div>
    </div>  
    <div class="main" id="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fas fa-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
        </div>
        <div class="options__right">
          

            <div class="options__button" id="recordBtn">
               <i class="fa fa-video-camera" ></i>
            </div>  
            <div class="options__button" id="stopRecordBtn" ><i class="far fa-stop-circle fa-2x" style="color:red"></i></div>
            <a id="download" class="options__button" ><i class="fa fa-download"></i></a>
          
            <div class="options__button" id="toggleUserData" >
              <i class="fa fa-users"></i>
            </div>

            <div id="inviteButton" class="options__button">
              <i class="fas fa-user-plus"></i>
            </div>
          </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__message_container">
        <div id="message-container"></div>
        <form id="send-container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <button id="send" class="options__button" type="submit">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </button>
        </form>

      </div>

      <div class="users_info_container" id="userInfoRight" style="display: none;" >
          
        <h1 class="user_info_head">Users</h1> 
        <input type="search" class="user_info_searchBar" placeholder="Search user" id="userSearch_input">
         
         
        <div id="userinfo_div"></div>
      </div>  
    </div>
  </div>


  
  </body>
</html>