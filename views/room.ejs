<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VideoChatApp</title>
    <link rel="stylesheet" href="style.css" />
    <script>
      const ROOM_ID = "<%= roomId %>";
      const PORT = "<%= port %>";

      let USERNAME = sessionStorage.getItem('zoom-USERNAME');
      if(!USERNAME){
        USERNAME = prompt('What is your name?') || 'Guest';
        sessionStorage.setItem('zoom-USERNAME', USERNAME)
      }
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="script.js" defer></script>

  </head>
  <body>
    <div class="header">
      <div class="logo">
        <h3>Video Chat</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__message_container">
        <div id="message-container"></div>
        <form id="send-container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <button id="send" class="options__button" type="submit">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </button>
        </form>

      </div>

    </div>
  </div>
  </body>
</html>